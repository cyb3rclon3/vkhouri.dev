---
import { Image } from 'astro:assets';
import headshot from '../assets/headshot.webp';
---

<div class="relative flex items-center gap-x-4">
    <Image 
    src={headshot}
    densities={[1, 2, 3]}
    alt="Headshot"
    class="h-12 w-12"
    />
 
  <div class="text-lg leading-6">
    <h1 class="font-semibold text-primary text-xl text-white">
      <span class="absolute inset-0"></span>
      Vaughn Khouri
    </h1>
    <p class="text-zinc-400">Personal Portfolio</p>
  </div>
</div>
